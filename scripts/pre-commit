#!/bin/bash
# Pre-commit hook: run fast local CI tier before every commit.
#
# To install hooks: scripts/install-hooks.sh

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
if [[ -x "$SCRIPT_DIR/ci-local" ]]; then
    CI_LOCAL="$SCRIPT_DIR/ci-local"
else
    REPO_ROOT="$(git rev-parse --show-toplevel)"
    CI_LOCAL="$REPO_ROOT/scripts/ci-local"
fi

"$CI_LOCAL" --tier fast
